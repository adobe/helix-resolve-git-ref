{
  "name": "@adobe/helix-resolve-git-ref",
  "version": "1.5.26",
  "private": true,
  "description": "An OpenWhisk Web Action that resolves a git reference (branch or tag) to the corresponding commit sha.",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --branches 94 --statements 95 --lines 98 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --branches 94 --statements 95 --lines 98 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "wsk-builder -v",
    "deploy": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json",
    "deploy-ci": "wsk-builder -v --deploy --test=/_status_check/healthcheck.json --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci",
    "deploy-sequences": "wsk-builder --no-build -no-hints -l latest -l major -l minor"
  },
  "wsk": {
    "name": "helix-services-private/resolve-git-ref@${version}",
    "linksPackage": "helix-services"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-resolve-git-ref"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-resolve-git-ref/issues"
  },
  "homepage": "https://github.com/adobe/helix-resolve-git-ref#readme",
  "dependencies": {
    "@adobe/helix-status": "7.0.3",
    "@adobe/openwhisk-action-utils": "3.0.0",
    "@adobe/openwhisk-action-logger": "2.0.3",
    "epsagon": "1.46.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@adobe/helix-log": "4.4.2",
    "@adobe/helix-ops": "1.2.0",
    "@adobe/openwhisk-action-builder": "2.4.0",
    "@pollyjs/adapter-node-http": "3.0.2",
    "@pollyjs/core": "3.0.0",
    "@pollyjs/persister-fs": "3.0.0",
    "@semantic-release/changelog": "3.0.6",
    "@semantic-release/exec": "3.3.8",
    "@semantic-release/git": "7.0.18",
    "ajv": "6.10.2",
    "codecov": "3.6.1",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.8.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.19.1",
    "jsdoc-to-markdown": "5.0.3",
    "junit-report-builder": "1.3.3",
    "lint-staged": "9.5.0",
    "mocha": "7.0.0",
    "nock": "11.7.1",
    "nyc": "15.0.0",
    "proxyquire": "2.1.3",
    "request": "2.88.0",
    "request-promise-native": "1.0.8",
    "semantic-release": "15.14.0"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
