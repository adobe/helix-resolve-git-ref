{
  "name": "@adobe/helix-resolve-git-ref",
  "version": "1.5.4",
  "description": "An OpenWhisk Web Action that resolves a git reference (branch or tag) to the corresponding commit sha.",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --branches 94 --statements 95 --lines 98 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --branches 94 --statements 95 --lines 98 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "semantic-prepare": "node ./build/prepare.js",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "wsk-builder -v",
    "deploy": "wsk-builder -v --deploy --test -p EPSAGON_TOKEN=$EPSAGON_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-resolve-git-ref"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-resolve-git-ref/issues"
  },
  "homepage": "https://github.com/adobe/helix-resolve-git-ref#readme",
  "dependencies": {
    "@adobe/helix-status": "5.0.1",
    "@adobe/openwhisk-action-utils": "^2.3.2",
    "epsagon": "^1.37.0"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.0",
    "@adobe/openwhisk-action-builder": "2.1.0",
    "@pollyjs/adapter-node-http": "2.6.2",
    "@pollyjs/core": "2.6.2",
    "@pollyjs/persister-fs": "2.6.2",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.3.0",
    "@semantic-release/exec": "3.3.7",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.5.0",
    "@semantic-release/npm": "5.1.15",
    "@semantic-release/release-notes-generator": "7.3.0",
    "ajv": "6.10.2",
    "bunyan": "1.8.12",
    "codecov": "3.6.1",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "6.5.0",
    "eslint-plugin-header": "3.0.0",
    "eslint-plugin-import": "2.18.2",
    "jsdoc-to-markdown": "5.0.1",
    "junit-report-builder": "1.3.3",
    "lint-staged": "9.4.0",
    "mocha": "6.2.1",
    "nock": "11.3.5",
    "nyc": "14.1.1",
    "proxyquire": "2.1.3",
    "request": "2.88.0",
    "request-promise-native": "1.0.7",
    "semantic-release": "15.13.24"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "wsk": {
    "name": "helix-services/resolve-git-ref@1.5.4",
    "static": []
  },
  "statuspage": {
    "name": "Helix Git Reference Resolver",
    "group": "Delivery"
  },
  "newrelic": {
    "group_policy": "Delivery Repeated Failure"
  }
}
