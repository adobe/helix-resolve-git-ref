{
  "name": "helix-resolve-git-ref",
  "version": "2.0.0",
  "description": "Default package starter kit for AssemblyScript based Compute@Edge projects",
  "main": "fastly/assembly/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fastly/compute-starter-kit-assemblyscript-default.git"
  },
  "keywords": [],
  "author": "oss@fastly.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fastly/compute-starter-kit-assemblyscript-default/issues"
  },
  "homepage": "https://github.com/fastly/compute-starter-kit-assemblyscript-default#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "assemblyscript": "^0.14.11",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.12.1",
    "mocha": "^8.2.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@fastly/as-compute": "^0.1.1"
  },
  "scripts": {
    "asbuild:untouched": "asc fastly/assembly/index.ts --target debug",
    "asbuild:optimized": "asc fastly/assembly/index.ts --target release",
    "asbuild": "npm run asbuild:untouched && npm run asbuild:optimized",
    "prepack": "npm run asbuild:optimized",
    "postpack": "mkdir -p pkg && mv ${npm_package_name}-${npm_package_version}.tgz pkg/${npm_package_name}.tar.gz",
    "lint": "eslint .",
    "test-ci": "echo no tests yet",
    "deploy-ci": "fastly compute deploy --service-id=${ID}",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'"
  }
}
