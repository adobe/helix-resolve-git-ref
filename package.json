{
  "name": "@adobe/helix-resolve-git-ref",
  "version": "1.5.1",
  "description": "An OpenWhisk Web Action that resolves a git reference (branch or tag) to the corresponding commit sha.",
  "main": "src/index.js",
  "scripts": {
    "test": " nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 95 --lines 95 mocha",
    "test-ci": "nyc --reporter=text --reporter=lcov --check-coverage --branches 95 --statements 95 --lines 95 mocha --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "semantic-release": "semantic-release",
    "semantic-prepare": "node ./build/prepare.js",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "wsk-builder -v",
    "deploy": "wsk-builder -v --deploy --test -p EPSAGON_TOKEN=$EPSAGON_TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-resolve-git-ref"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-resolve-git-ref/issues"
  },
  "homepage": "https://github.com/adobe/helix-resolve-git-ref#readme",
  "dependencies": {
    "@adobe/helix-status": "4.3.3",
    "@adobe/openwhisk-action-utils": "^1.0.2",
    "epsagon": "^1.33.1"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "^1.0.0",
    "@adobe/helix-shared": "^2.0.0",
    "@adobe/openwhisk-action-builder": "^2.0.0",
    "@pollyjs/adapter-node-http": "^2.6.2",
    "@pollyjs/core": "^2.6.2",
    "@pollyjs/persister-fs": "^2.6.2",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.3.0",
    "@semantic-release/exec": "^3.3.6",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.3.0",
    "ajv": "^6.10.2",
    "codecov": "^3.3.0",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.0.0",
    "eslint": "^6.1.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jsdoc-to-markdown": "^5.0.0",
    "junit-report-builder": "^1.3.3",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "nock": "^11.1.0",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7",
    "semantic-release": "^15.13.19"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "wsk": {
    "name": "helix-services/resolve-git-ref@1.5.1",
    "static": []
  }
}